<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/nux_welcome_image_content_description">

        <com.mrmannwood.hexlauncher.view.HexagonView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@color/colorPrimary"/>

        <com.mrmannwood.hexlauncher.view.HexagonView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:src="@color/colorSecondary"/>

        <com.mrmannwood.hexlauncher.view.HexagonView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@color/colorPrimary"/>

        <com.mrmannwood.hexlauncher.view.HexagonView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@color/colorSecondary"/>

    </FrameLayout>

    <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/nux_welcome_message"
            android:textColor="@color/colorOnPrimary"
            android:textSize="@dimen/tutorial_message_size"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/image"
            android:layout_marginBottom="@dimen/tutorial_floating_message_margin"/>

</RelativeLayout>