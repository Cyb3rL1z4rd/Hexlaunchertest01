    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mrmannwood.hexlauncher.view.KeyboardEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/colorPrimary"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/colorOnPrimary"
            android:textSize="16sp"
            android:hint="@string/app_list_search_edit_text_hint"
            android:textColorHint="@android:color/transparent"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@color/colorOnPrimary"
            />

        <FrameLayout
            android:id="@+id/app_1"
            android:layout_width="@dimen/hex_view_height"
            android:layout_height="75dp"
            android:foregroundGravity="center"
            android:layout_above="@id/search"
            android:layout_alignParentEnd="true"
            android:visibility="@{app1 == null ? View.INVISIBLE : View.VISIBLE}">

            <com.mrmannwood.hexlauncher.view.HexagonView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@{app1.backgroundColor}"
                android:contentDescription="@{adapter.getAppName(app1)}"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@{app1.icon}"
                android:visibility="@{adapter.getNonAdaptiveIconVisibility(app1)}"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@{app1.icon}"
                android:visibility="@{adapter.getAdaptiveIconVisibility(app1)}"
                android:contentDescription="@{adapter.getAppName(app1)}"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/app_2"
            android:layout_width="@dimen/hex_view_height"
            android:layout_height="75dp"
            android:foregroundGravity="center"
